<resources>

    <!-- Light Theme -->
    <style name="LightAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreenTheme" parent="LightAppTheme">
        <item name="actionBarTabStyle">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightCardViewStyle" parent="Theme.MaterialComponents.Light">
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardElevation">@dimen/cardElevation</item>
        <item name="contentPaddingTop">@dimen/padding4</item>
        <item name="contentPaddingBottom">@dimen/padding4</item>
        <item name="contentPaddingLeft">@dimen/padding4</item>
        <item name="contentPaddingRight">@dimen/padding4</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkSplashScreenTheme" parent="AppTheme">
        <item name="actionBarTabStyle">@style/Theme.MaterialComponents.DayNight.NoActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardElevation">@dimen/cardElevation</item>
        <item name="contentPaddingTop">@dimen/padding4</item>
        <item name="contentPaddingBottom">@dimen/padding4</item>
        <item name="contentPaddingLeft">@dimen/padding4</item>
        <item name="contentPaddingRight">@dimen/padding4</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Other Styles -->
    <style name="TitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummaryStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:padding">@dimen/padding8</item>
    </style>

    <style name="PriceStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="WhitePriceStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>
